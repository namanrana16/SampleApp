<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".expenseFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expensetext"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:text="0"
        android:textSize="80sp"/>


    <EditText
        android:id="@+id/expenseenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
        android:layout_below="@id/expensetext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:hint="Enter Amount Spent"
        android:inputType="number"
        android:text=""
        android:visibility="visible" />

    <EditText
        android:id="@+id/budgetenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/expensetext"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:hint="Enter Your Budget"
        android:inputType="number"
        android:text=""
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/setbudget"
        android:text="Set Budget"
        android:layout_below="@id/budgetenter"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/enterexpense"
        android:layout_below="@id/expenseenter"
        android:layout_marginTop="30dp"
        android:text="Enter Expense"
        android:layout_marginLeft="40dp"



        />

</RelativeLayout>