<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".attendanceFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="80sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/attendancetext"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attended"
        android:text="Attended"
        android:layout_below="@+id/attendancetext"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notattended"
        android:text="Not Attended"
        android:layout_below="@+id/attendancetext"
        android:layout_toEndOf="@id/attended"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"


        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_below="@+id/attended"
        android:id="@+id/reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Reset to 100"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Submit Custom Attendance"
        android:id="@+id/customattendancebutton"
        />

    <EditText
        android:id="@+id/customattendance"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Enter Custom Attendance"
        android:inputType="numberDecimal" />


</RelativeLayout>